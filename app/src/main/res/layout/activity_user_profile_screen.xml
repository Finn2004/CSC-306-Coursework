<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/background_tint"
    android:orientation="vertical"
    tools:context=".UserProfileActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/user_profile_screen_top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/button_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/user_profile_upper_bar_layout"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@android:color/white"
        app:title="Profile"
        app:titleCentered="true"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:padding="6dp"
            app:cardBackgroundColor="@color/button_bar"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:cardCornerRadius="64dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:src="@drawable/ic_account"
                        android:contentDescription="@string/profile_xml"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/example_username"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="34sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ActiveTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/example_active_for"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/profile_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/example_bio"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/Tab_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@+id/left_tab"
            android:background="@android:color/transparent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/left_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/profile_info_tab"
                android:checkable="true"
                android:backgroundTint="@color/toggle_background_colour"
                android:textColor="@color/toggle_text_colour"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/right_tab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/achievements_tab"
                android:checkable="true"
                android:backgroundTint="@color/toggle_background_colour"
                android:textColor="@color/toggle_text_colour"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </androidx.viewpager2.widget.ViewPager2>

</LinearLayout>
