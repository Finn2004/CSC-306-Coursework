<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/background_tint"
    tools:context=".GoalsAndChallengesActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/goals_top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/button_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/goals_and_challenges_upper_bar_layout"
        app:titleTextColor="@android:color/white"
        app:title="Goals and Challenges"
        app:titleCentered="true"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/goals_bottom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goals_top_toolbar">

        <TextView
            android:id="@+id/goals_text"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="@string/habit_goals_title"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goals_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scrollbars="vertical"
            android:padding="10dp"
            tools:listitem="@layout/goal_layout"
            tools:itemCount="1"/>

        <TextView
            android:id="@+id/challenge_text"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="@string/challenge_goals_title"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/goals_challenges_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/goals_bottom_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge_text">

            <LinearLayout
                android:id="@+id/daily_challenges_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:text="@string/daily_challenges_text"
                    android:textColor="#FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/daily_challenge_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:padding="10dp"
                    tools:listitem="@layout/daily_challenge_layout"
                    tools:itemCount="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekly_challenges_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:text="@string/weekly_challenges_text"
                    android:textColor="#FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weekly_challenge_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:padding="10dp"
                    tools:listitem="@layout/weekly_challenge_layout"
                    tools:itemCount="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/goals_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/button_bar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/button_bar"
            android:contentDescription="@string/home_screen_button"
            android:src="@drawable/ic_home_black"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/statistics_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/button_bar"
            android:contentDescription="@string/statistics_button"
            android:src="@drawable/ic_statistics_black"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/goals_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/button_bar"
            android:contentDescription="@string/goals_button"
            android:src="@drawable/ic_goals_white"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/competition_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/button_bar"
            android:contentDescription="@string/competition_button"
            android:src="@drawable/ic_competition_black"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>