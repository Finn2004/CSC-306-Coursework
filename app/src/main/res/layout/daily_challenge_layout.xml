<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/button_bar"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/challenge_text"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/daily_challenge_water"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/icons_32dp"

            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/challenge_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/daily_challenge_progress"
                android:padding="2dp"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/challenge_XP"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/XP_placeholder"
                android:padding="2dp"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/challenge_progress_bar"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="4"
            android:progress="1"
            app:indicatorColor="@color/Emerald"
            app:indicatorInset="3dp"
            app:indicatorSize="33dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>